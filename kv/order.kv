#:set ord_btn_txt 0.35    # rapid change button text size, size_hint height everywhere
#:set ord_lbl_txt 0.15    # rapid change button text size, size_hint height everywhere
#:set save_lbl_txt 0.5    # rapid change button text size, size_hint height everywhere
#:set g_ord_btn_txt 0.35
#:set ord_sz_hint_height 0.3
#:set save_height 0.5
#:set ord_card_height "400dp"


<CoffeOrder>
    id: order_grid
    cols: 1
    padding: 10, 10
    spacing: 30, 30
    size_hint_y: None
    # minimum_width: root.width * 0.86
    height: self.minimum_height
    # width: self.minimum_width
    Widget:
        id: order_start_widget
        size_hint: None, None
        size: root.width , "200dp"
        pos_hint: {'center_x': .5, "top": 1}
    MDCard:
        id: order_card
        on_pre_enter: 
        size_hint: None, None
        size: root.width * 0.96, ord_card_height
        #   size_x: root.width , self.height 
        size_y: 600
        # size_hint_x: 0.8
        pos_hint_x: {"center_x": 0.5}
        elevation: 25
        padding: 0.05 * self.height
        spacing:  0.04 * self.height
        radius: 20
        orientation: 'vertical'
        line_color: (0.2, 0.2, 0.2, 0.8)

        MDLabel:
            id: order_label_0
            size_hint: (0.9, 1 * ord_sz_hint_height)
            pos_hint: {'center_x': .5, "top": 1}
            font_size: self.height * ord_lbl_txt
            text: "COFFEE ORDER"
            halign: 'center'
        OrderMDFillRoundFlatButton:
            id: order_btn_0
            # disabled: True
            size_hint: (0.9, 0.6 * ord_sz_hint_height)
            pos_hint: {'center_x': .5, "top": 1}
            font_size: ord_btn_txt * self.height
            text: "Choice Coffee"
            value: 0
            on_press: root.ware_ordr_btn(0)  
        MDGridLayout:
            id: dose_grid_0
            size_hint: (0.9,  1 * ord_sz_hint_height)
            pos_hint: {'center_x': .5, 'top': 1}
            value: 0
            cols: 2
            padding: 0.01 * self.height
            spacing: 0.1 * self.height
            DoseButton:
                id: order_cofffee_1
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "0.5"
                value: 0.5
                on_press: root.oreder_press_dose(self, "0") 
            DoseButton:
                id: order_cofffee_2
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "1.0"
                value: 1
                on_press: root.oreder_press_dose(self, "0")
            DoseButton:
                id: order_cofffee_3
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "1.5"
                value: 1.5
                on_press: root.oreder_press_dose(self, "0")
            DoseButton:
                id: order_cofffee_4
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "2.0"
                value: 2
                on_press: root.oreder_press_dose(self, "0")

