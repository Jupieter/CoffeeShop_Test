#:set ord_btn_txt 0.25    # rapid change button text size, size_hint height everywhere
#:set save_height 0.16
#:set ord_lbl_txt 0.15    
#:set save_lbl_txt 0.5   
#:set g_ord_btn_txt 0.35
#:set ord_sz_hint_height 0.3
#:set ord_card_height "270dp"
#:set pad 0.08
#:set sps 0.07


<CoffeOrder>
    id: order_grid
    cols: 1
    padding: 10, 10
    spacing: 30, 30
    size_hint_y: None
    height: self.minimum_height
    MDCard:
        id: order_card
        on_pre_enter: 
        size_hint: None, None
        size: root.width * 0.96, ord_card_height
        size_y: 600
        pos_hint_x: {"center_x": 0.5}
        elevation: 25
        padding: pad * self.height
        spacing:  sps * self.height
        radius: 20
        orientation: 'vertical'
        line_color: (0.2, 0.2, 0.2, 0.8)
        OrderMDFillRoundFlatButton:
            id: order_btn_0
            size_hint: (1, 0.6 * ord_sz_hint_height)
            pos_hint: {'center_x': .5, "top": 1}
            font_size: ord_btn_txt * self.height
            text: "Choice Coffee"
            value: 0
            on_press: root.ware_ordr_btn(0)  
        MDGridLayout:
            id: dose_grid_0
            size_hint: (1,  1 * ord_sz_hint_height)
            pos_hint: {'center_x': .5, 'top': 1}
            value: 0
            cols: 2
            padding: 0.01 * self.height
            spacing: 0.1 * self.height
            DoseButton:
                id: order_cofffee_1
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "0.5"
                value: 0.5
                on_press: root.oreder_press_dose(self, "0") 
            DoseButton:
                id: order_cofffee_2
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "1.0"
                value: 1
                on_press: root.oreder_press_dose(self, "0")
            DoseButton:
                id: order_cofffee_3
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "1.5"
                value: 1.5
                on_press: root.oreder_press_dose(self, "0")
            DoseButton:
                id: order_cofffee_4
                size_hint: (1, 1)
                font_size: g_ord_btn_txt * self.height
                disabled: True
                text: "2.0"
                value: 2
                on_press: root.oreder_press_dose(self, "0")

