# Menu item in the DrawerList list.
#:import vibrator plyer.vibrator

<ItemDrawer>
    id: it_draw
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>
    id: cont_Nav
    # Let menu
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: cup_img.height

        Image:
            id: cup_img
            size_hint: None, None
            size: "100dp", "100dp"
            source: "image/coffe_icon1.png"

    MDLabel:
        text: "by Peter Jung"
        font_style: "Button"
        font_size: self.width/12
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "peterjung777@gmail.com"
        font_style: "Caption"
        font_size: self.width/16
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        id: scroller

        DrawerList:
            id: md_list


MDScreen:   
    # Bottom menu
    id: mdscreen
    md_bg_color: app.theme_cls.primary_light
    FitImage:
        id: coffee
        size_hint: (1, 1)
        padding: 4
        # size: (root.width, root.height)
        source: "image/bean_bg.jpg"

    MDBottomNavigation:
        id: nav_bottom
        panel_color: app.theme_cls.primary_color
        selected_color_background: "Custom"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItemSc1:
            id: screen1
            name: 'screen 1'
            text: 'Home'
            icon: 'home'
            badge_icon: "numeric-10"

        MDBottomNavigationItem:
            id: screen2
            name: 'screen 2'
            text: 'Order'
            icon: 'coffee'
            badge_icon: "numeric-5"
            MDBoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: 'Order Coffe'
                    halign: 'center'
                MDRoundFlatButton:
                    id: print
                    text: "Test 1"
                    font_size: 0.2 * self.height
                    size_hint: 0.5, 0.5
                    pos_hint: {"center_x": 0.5} 
                    disabled: False
                    on_press: app.button_pressed()
                MDRoundFlatButton:
                    id: print
                    text: "Test 2 "
                    font_size: 0.2 * self.height
                    size_hint: 0.5, 0.5
                    pos_hint: {"center_x": 0.5} 
                    disabled: False
                    on_press: app.button2_pressed()
                MDRoundFlatButton:
                    id: print
                    text: "Test 3 "
                    font_size: 0.2 * self.height
                    size_hint: 0.5, 0.5
                    pos_hint: {"center_x": 0.5} 
                    disabled: False
                    on_press: app.button3_pressed()
                Button:
                    text: 'vibrate 1s'
                    on_release: vibrator.vibrate(1)
                Button:
                    text: 'vibrate 0.1s'
                    on_release: vibrator.vibrate(0.1)
                Button:
                    text: 'cancel vibration'
                    on_release: vibrator.cancel()


        MDBottomNavigationItemSc3:
            id: screen3
            name: 'screen 3'
            text: 'Make'
            pos_hint: {"center_x": .5, "center_y": .5}
            icon: 'coffee-maker'

            MDLabel:
                text: 'Make Coffee'
                halign: 'center'

        MDBottomNavigationItem:
            id: screen4
            name: 'screen 4'
            text: 'Account'
            icon: 'account-cancel'
           
    MDNavigationLayout:
        id: nav_lay

        ScreenManager:
            id: sm_manager

            MDScreen:
                id: top_menu
                
                MDToolbar:
                    id: mdtoolbar1
                    title: "Coffe Bar 'Ante Portas' "
                    elevation: 10
                    pos_hint: {"top": 1}
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: "#000000"
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]
                    elevation:10


        MDNavigationDrawer:
            id: nav_drawer
            md_bg_color: app.theme_cls.primary_color
            radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)

            ContentNavigationDrawer:
                id: content_drawer
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"


    
            
                