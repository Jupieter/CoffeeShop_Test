# Menu item in the DrawerList list.
MDScreen:   
    # Bottom menu
    id: mdscreen
    md_bg_color: app.theme_cls.primary_light
    FitImage:
        id: coffee
        size_hint: (1, 1)
        padding: 4
        # size: (root.width, root.height)
        source: "image/bean_bg.jpg"

    MDBottomNavigation:
        id: nav_bottom
        panel_color: app.theme_cls.primary_color
        selected_color_background: "Custom"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            id: screen1
            name: 'screen 1'
            text: 'Home'
            icon: 'home'
            badge_icon: "numeric-10"

        MDBottomNavigationItem:
            id: screen2
            name: 'screen 2'
            text: 'Order'
            icon: 'coffee'
            badge_icon: "numeric-5"
            
            MDLabel:
                text: 'Order Coffe'
                halign: 'center'

        MDBottomNavigationItem:
            id: screen3
            name: 'screen 3'
            text: 'Make'
            pos_hint: {"center_x": .5, "center_y": .5}
            icon: 'coffee-maker'

            MDLabel:
                text: 'Make Coffee'
                halign: 'center'

        MDBottomNavigationItem:
            id: screen4
            name: 'screen 4'
            text: 'Account'
            icon: 'account-cancel'
           
   