# Menu item in the DrawerList list.
#:import vibrator plyer.vibrator

<ItemDrawer>
    id: it_draw
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>
    id: cont_Nav
    # Let menu
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: cup_img.height

        Image:
            id: cup_img
            size_hint: None, None
            size: "100dp", "100dp"
            source: "image/coffe_icon1.png"

    MDLabel:
        text: "by Peter Jung"
        font_style: "Button"
        font_size: self.width/12
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "peterjung777@gmail.com"
        font_style: "Caption"
        font_size: self.width/16
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        id: scroller

        DrawerList:
            id: md_list


MDScreen:   
    # Bottom menu
    id: mdscreen
    md_bg_color: app.theme_cls.primary_light
    FitImage:
        id: coffee
        size_hint: (1, 1)
        padding: 4
        # size: (root.width, root.height)
        source: "image/bean_bg.jpg"

    MDBottomNavigation:
        id: nav_bottom
        panel_color: app.theme_cls.primary_color
        selected_color_background: "Custom"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItemSc1:
            id: screen1
            name: 'screen 1'
            text: 'Home'
            icon: 'home'
            badge_icon: "numeric-10"

        MDBottomNavigationItemSc2:
            id: screen2
            name: 'screen 2'
            text: 'Order'
            icon: 'coffee'
            badge_icon: "numeric-5"    
            MDLabel:
                id: scr2_message_lbl
                markup: True
                size: root.width * 0.86, root.height * 0.2
                pos: self.width * 0.01  , self.height * 0.39
                font_size: 0.025 * root.height
                halign: "center"
                text: "Order a coffee! "

                ScrollView:
                    id: order_scroll 
                    # pos_hint: {"center_x": 1,"t op": 0.83}
                    size: root.width , root.height * 0.8
                    size_hint: None, None
                    # width: root.width * 0.96
                    # size_hint_x: 0.9
                    do_scroll_x: False # True 
                    do_scroll_y: True
                    scroll_y: 1
                    
                    # effect_cls: "ScrollEffect"

        MDBottomNavigationItemSc3:
            id: screen3
            name: 'screen 3'
            text: 'Make'
            pos_hint: {"center_x": .5, "center_y": .5}
            icon: 'coffee-maker'


        MDBottomNavigationItem:
            id: screen4
            name: 'screen 4'
            text: 'Account'
            icon: 'account-cancel'
           

    MDNavigationLayout:
        id: nav_lay

        ScreenManager:
            id: sm_manager

            MDScreen:
                id: top_menu
                
                MDToolbar:
                    id: mdtoolbar1
                    title: "Coffe Bar 'Ante Portas' "
                    elevation: 10
                    pos_hint: {"top": 1}
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: "#000000"
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]
                    elevation:10


        MDNavigationDrawer:
            id: nav_drawer
            md_bg_color: app.theme_cls.primary_color
            radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)

            ContentNavigationDrawer:
                id: content_drawer
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"


    
            
                