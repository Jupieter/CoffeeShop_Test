#:set txt_field 0.4    # rapid change button text size, size_hint height everywhere
#:set card_txt 0.8 
#:set sz_hint_hight 0.09 

<LogInCard>
    id: log_in_card  
    size_hint: 0.9, 0.8
    pos_hint: {"center_x": 0.5, "top": 0.85}
    elevation: 25
    padding: 0.05 * self.height
    spacing:  0.04 * self.height
    radius: 20
    orientation: 'vertical'
    line_color: (0.2, 0.2, 0.2, 0.8)


    Widget:
        id: log_start_widget
        size_hint: (0.8, 0.03 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}

    MDLabel:
        id: welcome_label
        text: "LOG IN"
        size_hint: (0.8, 4 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: 0.2 * self.height
        halign: 'center'
        padding_y: 6
    
    Widget:
        id: log_I_widget
        size_hint: (0.8, 0.01 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}

    MDTextFieldRound:
        id: user
        hint_text: "username"
        icon_right: "account"
        size_hint: (0.8, sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: txt_field * self.height
    
    MDTextFieldRound:
        id: password
        password: True
        hint_text: "password"
        icon_right: "eye-off"
        size_hint: (0.8, sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: txt_field * self.height
    
    Widget:
        id: log_II_widget
        size_hint: (0.8, 0.01 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}

    MDGridLayout:
        id: btn_grid
        size_hint: (0.8,  1.2 * sz_hint_hight)
        pos_hint: {'center_x': .5, 'top': 1}
        value: 0
        cols: 3
        padding: 0.01 * self.height
        spacing: 0.2 * self.height

        MDRoundFlatButton:
            id: log_in_btn 
            text: "LOG IN"
            font_size: 0.2 * self.height
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.log_in()
            disabled: False
        
        MDRoundFlatButton:
            id: log_clr_btn
            text: " CLEAR "
            font_size: 0.2 * self.height
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5} 
            on_press: root.clear() 
            disabled: False

        MDRoundFlatButton:
            id: log_out_btn 
            text: "LOG OUT"
            font_size: 0.2 * self.height
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.log_out()
            disabled: True 


    Widget:
        id: log_end_widget
        size_hint: (0.8, 0.3 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}


