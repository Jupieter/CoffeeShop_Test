#:set btn_txt 0.6    # rapid change button text size, size_hint height everywhere
#:set g_btn_txt 0.5
#:set sz_hint_hight 0.09 

<LogInCard>
    id: log_in_card  
    size_hint: 0.9, 0.8
    pos_hint: {"center_x": 0.5, "top": 0.85}
    elevation: 25
    padding: 0.05 * self.height
    spacing:  0.04 * self.height
    radius: 20
    orientation: 'vertical'
    line_color: (0.2, 0.2, 0.2, 0.8)

    MDLabel:
        id: welcome_label
        text: "LOG IN"
        size_hint: 1, 0.1
        # size_hint_y: None
        font_size: self.height/4
        halign: 'center'
        height: self.texture_size[1]
        padding_y: 6
    
    Widget:
        size_hint_y: None
        height: 20

    MDTextFieldRound:
        id: user
        hint_text: "username"
        icon_right: "account"
        size_hint: 0.8, 0.03
        # width: 300
        font_size: 0.4 * self.height
        pos_hint: {"center_x": 0.5}
    
    MDTextFieldRound:
        id: password
        hint_text: "password"
        icon_right: "eye-off"
        size_hint: 0.8, 0.03 
        font_size: 0.4 * self.height
        pos_hint: {"center_x": 0.5}
        password: True
    
    Widget:
        size_hint_y: None
        height: 20

    MDGridLayout:
        # adaptive_size: True
        size_hint: 0.9, 0.04
        # md_bg_color: app.theme_cls.primary_color
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        cols: 3
        spacing: 15,15

        MDRoundFlatButton:
            id: log_in_btn 
            text: "LOG IN"
            font_size: 0.2 * self.height
            size_hint: 1, 0.5
            pos_hint: {"center_x": 0.5}
            on_press: root.log_in()
            disabled: False
        
        MDRoundFlatButton:
            id: log_clr_btn
            text: "CLEAR"
            font_size: 0.2 * self.height
            size_hint: 1, 0.5
            pos_hint: {"center_x": 0.5} 
            on_press: root.clear() 
            disabled: False

        MDRoundFlatButton:
            id: log_out_btn 
            text: "LOG OUT"
            font_size: 0.2 * self.height
            size_hint: 1, 0.5
            pos_hint: {"center_x": 0.5}
            on_press: root.log_out()
            disabled: True 


    Widget:
        size_hint_y: None
        height: 20


