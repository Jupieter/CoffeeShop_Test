#:set btn_txt 0.45    # rapid change button text size, size_hint height everywhere
#:set g_btn_txt 0.45
#:set sz_hint_hight 0.09

<CoffeWare>
    id: coffee_ware_card
    on_pre_enter: 
    size_hint: 0.9, 0.8
    pos_hint: {"center_x": 0.5, "top": 0.85}
    elevation: 25
    padding: 0.05 * self.height
    spacing:  0.04 * self.height
    radius: 20
    orientation: 'vertical'
    line_color: (0.2, 0.2, 0.2, 0.8)

    Widget:
        id: cm_start_widget
        size_hint: (0.9, 0.03 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
    
    MDLabel:
        id: coffe_ware_label
        size_hint: (0.9, 0.8 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: self.height
        text: "COFFEE MAKE"
        halign: 'center'

    MDLabel:
        id: coffe_message_label
        size_hint: (0.9, 0.35 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: self.height
        text: "message"
        halign: 'center'

    MDFillRoundFlatButton:
        id: date_btn
        size_hint: (0.9, sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: btn_txt * self.height
        text: "Coffee Date"
        value: 0
        on_release: root.show_date_picker()

    MDFillRoundFlatButton:
        id: time_btn
        size_hint: (0.9, sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: btn_txt * self.height
        text: "Coffee Time"
        value: 0
        on_release: root.show_time_picker()
    
    MDFillRoundFlatButton:
        id: ware_btn
        size_hint: (0.9, sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: 0.62 * btn_txt * self.height
        text: "Opened Coffee"
        value: 0
        on_release: root.ware_button()

    MDGridLayout:
        id: dose_grid
        size_hint: (0.9,  1.2 * sz_hint_hight)
        pos_hint: {'center_x': .5, 'top': 1}
        value: 0
        cols: 4
        padding: 0.01 * self.height
        spacing: 0.2 * self.height

        DoseButton:
            id: d2
            size_hint: (1, 1)
            font_size: g_btn_txt * self.height
            text: "2"
            value: 2
            on_press: coffee_ware_card.press_dose(self) # self.press_dose(self)
        DoseButton:
            id: d4
            size_hint: (1, 1)
            font_size: g_btn_txt * self.height
            text: "4"
            value: 4
            on_press: coffee_ware_card.press_dose(self)
        DoseButton:
            id: d6
            size_hint: (1, 1)
            font_size: g_btn_txt * self.height
            text: "6"
            value: 6
            on_press: coffee_ware_card.press_dose(self)
        DoseButton:
            id: d8
            size_hint: (1, 1)
            font_size: g_btn_txt * self.height
            text: "8"
            value: 8
            on_press: coffee_ware_card.press_dose(self)
    
    MDFillRoundFlatButton:
        id: ware_save
        size_hint: (0.9, sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}
        font_size: btn_txt * self.height
        text: "SAVE"
        value: 0
        on_release: root.ware_save()
    
    Widget:
        id: cm_end_widget
        size_hint: (0.9, 0.3 * sz_hint_hight)
        pos_hint: {'center_x': .5, "top": 1}


    