<CoffeWare>
    id: coffee_ware_card  
    size_hint: 0.85, 0.70
    # size: 400, 700
    pos_hint: {"center_x": 0.5, "center_y": 0.46}
    elevation: 25
    padding: 25
    spacing: 25
    radius: 20
    orientation: 'vertical'
    line_color: (0.2, 0.2, 0.2, 0.8)

    Widget:
        id: start_widget
        size_hint_y: None
        height: 20
    
    MDLabel:
        id: coffe_ware_label
        font_size: 40
        text: "Coffee Make 3"
        halign: 'center'

    MDLabel:
        id: coffe_message_label
        font_size: 20
        text: "Coffee Make 3"
        halign: 'center'
    
    MDBoxLayout:
        id: btn_box
        orientation: "vertical"
        adaptive_size: True
        spacing: 25
        padding: 25
        pos_hint: {"center_x": .5}

    
        MDFillRoundFlatButton:
            id: ware_btn
            font_size: 25
            text: "Opened Coffee"
            value: 0
            pos_hint: {'center_x': .5}
            on_release: root.show_time_picker()

        MDFillRoundFlatButton:
            id: date_btn
            font_size: 25
            text: "Coffee Date"
            value: 0
            pos_hint: {'center_x': .5}
            on_release: root.show_date_picker()

        MDFillRoundFlatButton:
            id: time_btn
            font_size: 25
            text: "Coffee Time "
            value: 0
            pos_hint: {'center_x': .5}
            on_release: root.show_time_picker()
    
    MDGridLayout:
        id: dose_grid
        adaptive_size: True
        pos_hint: {"center_x": 0.5}
        cols: 2
        spacing: 15,15

        DoseButton:
            id: d2
            text: "2 Dose"
            value: 2
            on_press: coffee_ware_card.press_dose(self) # root.press_dose(self)
        DoseButton:
            id: d4
            text: "4 Dose"
            value: 4
            on_press: coffee_ware_card.press_dose(self) # root.press_dose(self)
        DoseButton:
            id: d6
            text: "6 Dose"
            value: 6
            on_press: coffee_ware_card.press_dose(self) # root.press_dose(self)
        DoseButton:
            id: d8
            text: "8 Dose"
            value: 8
            on_press: coffee_ware_card.press_dose(self) # root.press_dose(self)
    
    MDFillRoundFlatButton:
        id: ware_save
        font_size: 25
        text: "Save the next coffee time"
        value: 0
        pos_hint: {'center_x': .5}
        on_release: root.button_able(True)
    
    Widget:
        id: end_widget
        size_hint_y: None
        height: 20


    