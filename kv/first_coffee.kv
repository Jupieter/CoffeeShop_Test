<CounterLabel>:
    text: 'the counter value is {}'.format(app.counter)  # `app` in kv is equivalent to `App.get_running_app()` in Python

<FirstCoffe>
    id: fk_box 
    size_hint: 0.85, 0.85
    # size: 400, 700
    pos_hint: {"center_x": 0.5, "center_y": 0.46}
    elevation: 25
    padding: 25
    spacing: 25
    radius: 20
    orientation: 'vertical'
    line_color: (0.0, 0.0, 0.0, 0.8)


    MDLabel:
        id: fk_label
        text: "NEXT COFFEE"
        size_hint: 1, 0.1
        # size_hint_y: None
        font_size: self.height/2.5
        halign: 'center'
        height: self.texture_size[1]
        padding_x: 15
        
    MDCard:
        id: fk_datum 
        size_hint: 0.8, 0.05
        # size: 300, 50
        pos_hint: {"center_x": 0.5}
        elevation: 25
        padding: 25
        spacing: 25
        radius: 20
        orientation: 'vertical'
        line_color: (0.2, 0.2, 0.2, 1)
        MDLabel:
            id: fk_datum_label
            text: "----.--.--"
            size_hint: 1, 0.1
            font_size: self.width/10
            halign: 'center'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            # size_hint_y: None
            # height: self.texture_size[1]
            padding_y: 6

    MDGridLayout:
        # adaptive_size: True
        # md_bg_color: app.theme_cls.primary_color
        size_hint: 0.8, 0.05
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        cols: 2
        spacing: 15,15

        MDCard:
            id: fk_hour 
            size_hint: 1, 0.5
            # size: 120, 50
            pos_hint: {"center_x": 0.5}
            elevation: 25
            padding: 25
            spacing: 25
            radius: 20
            orientation: 'vertical'
            line_color: (0.2, 0.2, 0.2, 1)
            MDLabel:
                id: fk_hour_label
                text: "--"
                size_hint: 1, 1
                font_size: self.width/5
                halign: 'center'
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                # size_hint_y: None
                # height: self.texture_size[1]
                padding_y: 6
        MDCard:
            id: fk_min
            size_hint: 1, 0.5
            # size: 120, 50
            pos_hint: {"center_x": 0.5}
            elevation: 25
            padding: 25
            spacing: 25
            radius: 20
