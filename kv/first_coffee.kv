                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                # size_hint_y: None
                # height: self.texture_size[1]
                padding_y: 6

    Button:
        type: 'large'
        pos_hint: {"center_x": 0.5}
        size_hint: (.8, .18)
        size: (100, 100)
        background_normal: "image/koffe.jpeg"
        background_down: "image/koffe_bw.jpeg"
        border: (25,25,25,25)
        on_press: root.switch_scr2()
        padding_y: 6

